---
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
import Footer from "./footer.astro";
import Header from "./header.astro";
import Meta from "./meta.astro";

type Props = {
  title?: string;
  description?: string;
  cover?: string;
};

const { title, description, cover } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-zinc-800">
  <head>
    <Meta title={title ? `${title} Â· ${SITE_TITLE}` : SITE_TITLE} cover={cover} description={description ?? SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="flex flex-col h-full mb-8 overflow-y-scroll antialiased">
      <Header />
      <div class="flex-auto">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
